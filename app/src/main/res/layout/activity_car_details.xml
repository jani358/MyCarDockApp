<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CarDetails">

    <TextView
        android:id="@+id/submitcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Submit Car"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"
        android:hint="Model name"
        android:padding="20dp"
        android:textColorHint="@color/purple_700" />

    <EditText
        android:id="@+id/chasinumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/model"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"
        android:hint="Chasi Number"
        android:padding="20dp"
        android:textColorHint="@color/purple_700" />

    <EditText
        android:id="@+id/fuelused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chasinumber"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"
        android:hint="Fuel Used"
        android:padding="20dp"
        android:textColorHint="@color/purple_700" />

    <EditText
        android:id="@+id/ownername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fuelused"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"
        android:hint="Owner Name"
        android:padding="20dp"
        android:textColorHint="@color/purple_700" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitbtn"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ownername"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/submitbtn"
        android:backgroundTint="@color/teal_200"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/car" />


    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitcar"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Enter Your Car Details"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>